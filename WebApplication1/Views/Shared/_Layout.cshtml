<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css">
  
    <style>
        /* Custom styling for nested dropdown */
        .dropdown-submenu {
            position: relative;
        }

            .dropdown-submenu .dropdown-menu {
                top: 0;
                left: 100%;
                margin-top: -5px;
                display: none;
                position: absolute;
            }

            .dropdown-submenu:hover .dropdown-menu {
                display: block;
            }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-expand-lg navbar-toggleable-sm navbar-light bg-grey border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto d-flex flex-row" style="background-color:aqua">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Details" asp-action="Details">Details</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Users">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <!-- Dropdown Menu -->
                        <li class="nav-item dropdown" icon="Menu">
                            <a class="nav-link dropdown-toggle" href="#" id="menuDropdown" role="button" data-bs-toggle="dropdown">
                                Menu
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="menuDropdown">
                                <li class= "dropdpwn-submenu">
                                    <a class="dropdown-item dropdown-toggle" href="#">Settings</a>
                                    <ul calss="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Settings" asp-action="General">General Settings</a></li>
                                        <li><a class="dropdown-item" asp-controller="Settings" asp-action="Security">Security Settings</a></li>
                                    </ul>
                                 </li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="Index">Reports</a></li>
                                <li><a class="dropdown-item" asp-controller="Help" asp-action="Index">Help</a></li>
                            </ul>
                        </li>
                       
                    </ul>
                    <ul class=" nav navbar-nav flex-grow-2 " style="background-color:aquamarine">
                        <li class="nav-item " style="float:right">
                            @if (Context.Session.GetString("WindowsUsername") != null)
                            {
                                var username = Context.Session.GetString("WindowsUsername");
                                var gender = Context.Session.GetString("WindowsUserGender");
                                <!-- Assuming gender is stored in session -->

                                <span>
                                    @if (gender == "Male")
                                    {
                                        <i class="fas fa-mars"></i> <!-- Male icon -->
                                    }
                                    else if (gender == "Female")
                                    {
                                        <i class="fas fa-venus"></i> <!-- Female icon -->
                                    }
                                    else
                                    {
                                        <i class="fas fa-user"></i> <!-- Default icon -->
                                    }

                                    Logged in as: @username
                                </span>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - WebApplication1  @* <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
